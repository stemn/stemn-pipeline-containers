{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "pretty": true,
    "noUnusedLocals": true,
    "lib": [
      "es2015"
    ]
  },
  "exclude": [
    "dist",
  ],
  "include": [
    "**/*",
    "typings.d.ts"
  ]
}
