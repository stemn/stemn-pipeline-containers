  "dependencies": {
    "request": "^2.83.0",
    "request-promise": "^4.2.2"
  },
  "devDependencies": {
    "nodemon": "^1.14.12",
    "typescript": "^2.7.2",
    "version-bump-prompt": "^4.0.0"
